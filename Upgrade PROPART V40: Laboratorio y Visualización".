    <script>
        const db = {
            "P0300": "Misfire m√∫ltiple. Revisar: Bobinas, Buj√≠as, Fuga de vac√≠o.",
            "P0171": "Mezcla Pobre. Revisar: MAF sucio, entrada de aire falsa.",
            "P0507": "Ralent√≠ alto. Limpiar cuerpo y calibrar canal 060.",
            "P0420": "Catalizador. Revisar sensor O2 posterior.",
            "P0335": "Sensor CKP. Revisar cableado y se√±al."
        };

        function tab(id, el) {
            document.querySelectorAll('.screen').forEach(s => s.classList.remove('active'));
            document.querySelectorAll('.nav-item').forEach(n => n.classList.remove('active'));
            document.getElementById(id).classList.add('active');
            el.classList.add('active');
        }

        async function conectarBT() {
            try {
                const device = await navigator.bluetooth.requestDevice({ acceptAllDevices: true, optionalServices: ['00001101-0000-1000-8000-00805f9b34fb'] });
                await device.gatt.connect();
                document.getElementById('status').innerText = "CONECTADO: " + device.name;
                document.getElementById('status').style.color = "var(--green)";
                alert("‚úÖ V√çNCULO EXITOSO");
            } catch (e) { alert("Socio, activa BT y GPS."); }
        }

        function buscarDTC() {
            const dtc = document.getElementById('dtcInput').value.toUpperCase().trim();
            const res = document.getElementById('solucionCont');
            if(db[dtc]) {
                res.style.display = "block";
                document.getElementById('solTitle').innerText = "SOLUCI√ìN " + dtc;
                document.getElementById('solText').innerText = db[dtc];
            } else if (dtc !== "") {
                puente("DTC_DESCONOCIDO: " + dtc);
            }
        }

        function puente(accion) {
            const marca = document.getElementById('marcaSelect').value;
            let msg = `[PROPART_V40] Acci√≥n: ${accion} | Marca: ${marca}`;
            window.location.href = "https://wa.me/527776838196?text=" + encodeURIComponent(msg);
        }
    </script>
